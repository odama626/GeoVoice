doctype html
html
  head
    title Geolocation
    meta(name="viewport", content="initial-scale=1.0, user-scalable=no")
    meta(charset="utf-8")
  body
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700", type="text/css")
    link(rel="stylesheet", href="https://fonts.googleapis.com/icon?family=Material+Icons")
    link(rel="stylesheet", href="/css/material.indigo-pink-1.3.0.min.css")
    link(rel="stylesheet", href="/css/mdl-jquery-modal-dialog.css")
    link(rel="stylesheet", href="/css/baseStyle.css")
    link(rel="shortcut icon", href="/res/favicon.ico", type="image/x-icon")
    link(rel="icon", href="/res/favicon.ico", type="image/x-icon")
    block cssLinks
    .mdl-layout.mdl-js-layout
      header.mdl-layout__header
        .mdl-layout-icon
        .mdl-layout__header-row
          span.mdl-layout__title.clickable(onClick="location='/'") GeoVoice
          .mdl-layout-spacer
          nav.mdl-navigation
            block navBar
      #layout-drawer.mdl-layout__drawer
        if user
          span.mdl-layout__title.clickable(onClick="location='user'") #{user.username}
        else
          span.mdl-layout__title.clickable(onClick="location='/'") GeoVoice
        nav.mdl-navigation
          block navMenu
          a.mdl-navigation__link(href="/about") About
      block mainContent
      .mdl-snackbar.mdl-js-snackbar(aria-live="assertive", aria-atomic="true", aria-relevant="text")
        .mdl-snackbar__text
        button.mdl-snackbar__action(type="button")
    
    
    script(async src="/js/api.js")
    script(async src="/js/ext/material-1.3.0.min.js")
    script(async src="/js/ext/mdl-jquery-modal-dialog.js")
    block jsLibs
